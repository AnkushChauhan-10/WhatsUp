<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".loginactivity.loginfragment.SingUpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@color/gray"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher_foreground" />

        <EditText
            android:id="@+id/name"
            android:inputType="textPersonName"
            android:hint="UserName"
            android:textSize="20dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/email"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:textSize="20dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/password"
            android:inputType="textPassword"
            android:hint="Password"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:padding="10dp"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/phoneNo"
            android:inputType="phone"
            android:hint="PhoneNo"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:padding="10dp"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textSingIn"
            android:text="already have account?"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/singUpButton"
            android:layout_marginTop="10dp"
            android:text="sing up"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/googleSingUp"
                android:text="facebook"
                android:drawableLeft="@drawable/ic_android_black_24dp"
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:backgroundTint="@color/cardview_dark_background"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/facebookSingUp"
                android:layout_width="wrap_content"
                android:text="google"
                android:padding="10dp"
                android:backgroundTint="@color/material_on_primary_disabled"
                android:drawableLeft="@drawable/ic_android_black_24dp"
                android:layout_margin="2dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/singUpPhone"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:text="Sing Up With Phone"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>