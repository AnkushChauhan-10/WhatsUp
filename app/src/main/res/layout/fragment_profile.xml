<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainscreen.mainfragments.setting.ProfileFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/prime">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/prime"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/profileBack"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_baseline_keyboard_backspace_24"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:text="Profile"
            android:textSize="28dp"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageProfile"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:background="@drawable/message_count_circle" />
        <ImageView
            android:id="@+id/changeProfile"
            android:src="@drawable/ic_baseline_camera_alt_24"
            android:background="@drawable/circuler_image_shape"
            android:layout_alignBottom="@+id/imageProfile"
            android:layout_alignRight="@+id/imageProfile"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:padding="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
    </RelativeLayout>

</LinearLayout>